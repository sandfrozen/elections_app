<div class="container">
    <div class="col-md-6 col-md-offset-3">

      <h2>Rejestracja do serwisu <string>E-wybory</string></h2>
      <h6><i>Wybory Przed Internet</i></h6>
      <h5 class="bg-warning">Musisz wprowadzić swoje dane osobowe wraz z peselem.</h5>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="row">
            <div class="form-group col-sm-6">
              <%= f.label :name, "Imie", class: "control-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group col-sm-6">
              <%= f.label :surname, "Nazwisko", class: "control-label" %>
              <%= f.text_field :surname, class: "form-control" %>
            </div>
          </div>
            <div class="form-group">
              <%= f.label :pesel, class: "control-label" %>
              <%= f.text_field :pesel, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: "control-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
          <div class="row">
            <div class="form-group col-sm-6">
              <%= f.label :password, "Hasło", class: "control-label" %>
              <% if @minimum_password_length %>
                  <em>(minumum <%= @minimum_password_length %> znaków)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
            <div class="form-group col-sm-6">
              <%= f.label :password_confirmation, "Potwierdź hasło", class: "control-label" %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.submit "Zarejestruj", class: "btn btn-primary" %>
          </div>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>
</div>
