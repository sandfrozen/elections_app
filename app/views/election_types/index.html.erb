<button class="btn btn-info btn-show-form">
  Dodaj nowy typ
</button>
<div class="form-to-show">
  <div class="page-header">
    <h3>Nowy typ wyborów:</h3>
  </div>


  <%= form_for(@election_type, html: { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="row">
        <div class="col-lg-6">
          <div class="input-group">
            <span class="input-group-addon">
              Nazwa:
            </span>
            <%= f.text_field :name, class: "form-control", placeholder: "Typ" %>
            <span class="input-group-btn">
              <%= f.submit "Dodaj", class: "btn btn-success" %>
            </span>
          </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
      </div><!-- /.row -->
  <% end %>
</div><div class="page-header">
  <h3>Typy wyborów:</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>

      <th>Id</th>
      <th>Typ</th>

      <th></th>
      <th></th>

    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @election_types) do |election_type| %>

        <td><%= election_type.id %></td>
        <td><%= election_type.name %></td>

        <td><%= link_to 'Edytuj typ', edit_election_type_path(election_type) %></td>
        <td><%= link_to 'Usuń', election_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    </tbody>
  </table>
</div>
