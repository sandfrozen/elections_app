<button class="btn btn-info btn-show-form">
  Dodaj możliwość głosowania
</button>
<div class="form-to-show">
  <div class="page-header">
    <h3>Dodaj możliwość głosowania</h3>
  </div>
  <%= render 'form' %>
</div>

<div class="page-header">
  <h3>Wprawnienia:</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th><%= ElectionUser.human_attribute_name(:vote)%></th>
      <th><%= ElectionUser.human_attribute_name(:User_id)%></th>
      <th><%= ElectionUser.human_attribute_name(:Election_id)%></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @election_users) do |election_user| %>
        <td><%= election_user.vote %></td>
        <td><%= election_user.user.email %></td>
        <td><%= election_user.election.name %></td>
        <td><%= link_to 'Show', election_user %></td>
        <td><%= link_to 'Edit', edit_election_user_path(election_user) %></td>
        <td><%= link_to 'Destroy', election_user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    <% end %>
    </tbody>
  </table>
</div>
