<button class="btn btn-info btn-show-form">
  Dodaj nowe wybory
</button>
<div class="form-to-show">
  <div class="page-header">
    <h3>Nowe wybory:</h3>
  </div>
  <%= render 'form' %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <h3>Trwające</h3>
    <thead>
      <tr>
        <th>id</th>
        <th>Nazwa</th>
        <th>Typ wyborów</th>
        <th>Informacje</th>
        <th>Start</th>
        <th>Koniec</th>
        <th>Max ilość głosów</th>
        <th>Ilość kandydatów</th>
        <th>Ilość osób uprawnionych</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @actual_elections) do |election| %>
          <tr>
            <td><%= election.id %></td>
            <td><%= election.name %></td>
            <td><%= election.election_type.name %></td>
            <td><%= election.info %></td>
            <td><%= election.start %></td>
            <td><%= election.stop %></td>
            <td><%= election.max_votes %></td>
            <td><%= link_to 'Edytuj', edit_election_path(election) %></td>
            <td><%= link_to 'Usuń', election, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
    <% end %>
    </tbody>
  </table>

    <table class="table table-striped table-bordered table-hover">
      <h3>Zakończone</h3>
      <thead>
      <tr>
        <th>id</th>
        <th>Nazwa</th>
        <th>Typ wyborów</th>
        <th>Informacje</th>
        <th>Start</th>
        <th>Koniec</th>
        <th>Max ilość głosów</th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <%= content_tag_for(:tr, @past_elections) do |election| %>
          <tr>
          <td><%= election.id %></td>
          <td><%= election.name %></td>
          <td><%= election.election_type.name %></td>
          <td><%= election.info %></td>
          <td><%= election.start %></td>
          <td><%= election.stop %></td>
          <td><%= election.max_votes %></td>
          <td><%= link_to 'Edytuj', edit_election_path(election) %></td>
          <td><%= link_to 'Usuń', election, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
  </table>
  <table class="table table-striped table-bordered table-hover">
    <h3>Przyszłe</h3>
    <thead>
    <tr>
      <th>id</th>
      <th>Nazwa</th>
      <th>Typ wyborów</th>
      <th>Informacje</th>
      <th>Start</th>
      <th>Koniec</th>
      <th>Max ilość głosów</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @future_elections) do |election| %>
        <tr>
          <td><%= election.id %></td>
          <td><%= election.name %></td>
          <td><%= election.election_type.name %></td>
          <td><%= election.info %></td>
          <td><%= election.start %></td>
          <td><%= election.stop %></td>
          <td><%= election.max_votes %></td>
          <td><%= link_to 'Edytuj', edit_election_path(election) %></td>
          <td><%= link_to 'Usuń', election, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
