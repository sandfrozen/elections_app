<h3 style="text-align: center">Wyniki wyborów:</h3><h1 style="text-align: center"><%= @election.name %></h1>

<h3>Typ wyborów: <%= @election.election_type.name %></h3>

<hr>
<h2>Ilość osób uprawnionych do głosowania: <%=@election_voters.length %></h2>
<h2>Ilość osób które oddały głos: <%=@election_votes.length %></h2>
<h2>Frekwencja: <%=@frequency %> %</h2>
<hr>
<h3>Wyniki: </h3>

<% i=0 %>
<%@results.each do |result|%>
    <% if result[0] == nil %>
        <% i-=1   %>
    <% else %>
        <% if i==0 %>
            <%if @candidates.where("id = ?",result[0]).to_a.first != nil%>
            <h3 style="color: red"><%= @candidates.where("id = ?",result[0]).to_a.first.name %> <%= @candidates.where("id = ?",result[0]).to_a.first.surname %>: <%= result[1] %></h3>
            <% end %>
        <% else %>
            <%if @candidates.where("id = ?",result[0]).to_a.first != nil%>
          <h3><%= @candidates.where("id = ?",result[0]).to_a.first.name %> <%= @candidates.where("id = ?",result[0]).to_a.first.surname %>: <%= result[1] %></h3>
                <% end %>
        <% end %>
        <br>
    <% end %>
    <% i+=1   %>
<% end %>

<%= button_to "Generuj PDF", generate_path %>


